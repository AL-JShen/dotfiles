{
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "/home/js/miniconda3/bin/mypy",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "/home/js/miniconda3/bin/flake8",
  "python.linting.flake8Args": [
    "--max-line-length=83",
    "--disable=E203"
  ],
  "python.linting.pylintEnabled": false,
  "python.linting.pylintPath": "/home/js/miniconda3/bin/pylint",
  "python.linting.pylintArgs": [
    "--ignored-classes=astropy.units",
    "--disable=C0330,C0411,C0114",
    "--jobs=0"
  ],
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/home/js/miniconda3/bin/black",

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp", "cuda"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
