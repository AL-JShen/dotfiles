  "rust-analyzer.completion.postfix.enable": true,
  "rust-analyzer.completion.autoimport.enable": true,
  "rust-analyzer.completion.addCallParenthesis": true,
  "rust-analyzer.updates.channel": "nightly",
  "rust-analyzer.updates.prompt": true,
  "rust-analyzer.inlayHints.chainingHints": true,
  "rust-analyzer.inlayHints.typeHints": true,
  "rust-analyzer.inlayHints.refreshOnInsertMode": true,
  "rust-analyzer.callInfo.full": true,
  "rust-analyzer.checkOnSave.enable": true,

  "html.autoClosingTags": true,

  "tabnine.priority": 80,

  "suggest.languageSourcePriority": 100,
  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.noselect": false,
  "suggest.floatEnable": true,
  "suggest.detailField": "preview",
  "suggest.localityBonus": false,
  "suggest.triggerCompletionWait": 50,
  "suggest.timeout": 5000,
  "suggest.acceptSuggestionOnCommitCharacter": true,

  "diagnostic.messageTarget": "float",
  "diagnostic.messageDelay": 10,
  "diagnostic.maxWindowHeight": 80,
  "diagnostic.maxWindowWidth": 80,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " Â» ",
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.enableSign": true,
  "diagnostic.enableHighlightLineNumber": true,

  "coc.preferences.hoverTarget": "float",
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.previewAutoClose": false,
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.formatOnSaveFiletypes": ["python", "rust", "css", "markdown", "javascript", "javascriptreact"],

  "signature.target": "float",
  "signature.maxWindowHeight": 80,

  "snippets.autoTrigger": true,
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "snippets.ultisnips.enable": true,

  "npm.binPath": "/home/js/.nvm/versions/node/v14.15.4/bin/npm"
}
